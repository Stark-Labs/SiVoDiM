<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/speechAvatar"
            android:scaleType="centerCrop"
            android:layout_width="60dp"
            android:layout_marginRight="3dp"
            android:layout_height="60dp"
            android:src="@drawable/noavatar" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:scaleType="centerCrop"
            android:layout_alignStart="@id/speechAvatar"
            android:layout_alignLeft="@id/speechAvatar"
            android:id="@+id/circleAvatar"
            android:src="@drawable/no_emotion_circle" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Character name"
            android:id="@+id/characterName"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/speechText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="Text"
            android:textColor="#000"
            android:textSize="17dp" />

    </LinearLayout>
</LinearLayout>